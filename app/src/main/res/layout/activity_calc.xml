<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kt.calcapp.CalcActivity"
    android:paddingTop="20pt">

    <EditText
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/grey"
        android:gravity="bottom|right"
        android:textColor="@android:color/white"
        android:textSize="24sp" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAllClear"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="buClean"
                android:text="AC" />

            <Button
                android:id="@+id/btnPlusMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="+/-" />

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="buPercent"
                android:text="%" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/opt"
                android:onClick="btnOpEvent"
                android:text="/"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="9" />

            <Button
                android:id="@+id/btnMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/opt"
                android:onClick="btnOpEvent"
                android:text="*"
                android:textColor="@android:color/white" />

        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="6" />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/opt"
                android:onClick="btnOpEvent"
                android:text="-"
                android:textColor="@android:color/white" />
        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <Button
                android:id="@+id/btn1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="btnClickEvent"
                android:background="@color/white_black"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="btnClickEvent"
                android:background="@color/white_black"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/white_black"
                android:onClick="btnClickEvent"
                android:text="3" />

            <Button
                android:id="@+id/btnSum"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/opt"
                android:onClick="btnOpEvent"
                android:text="+"
                android:textColor="@android:color/white" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnZero"
            android:layout_width="80pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/white_black"
            android:text="0"
            android:onClick="btnClickEvent"/>

        <Button
            android:id="@+id/btnDot"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/white_black"
            android:text="."
            android:onClick="btnClickEvent"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:background="@color/opt"
            android:onClick="btnEqualEvent"
            android:text="="
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
